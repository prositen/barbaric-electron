{% include 'header.html.j2' %}
{% from "_macros.html" import render_field_with_errors, render_field, render_field_with_label %}

<h2>Edit directory</h2>
<form method="POST" action="{{ url_for('admin_directory_edit') }}" class="form-horizontal">
    {{ form.hidden_tag() }}

    <input type="hidden" id="directory_id" name="directory_id" value="{{ directory_id }}">
    {{ render_field_with_label(form.name, label="Display name", class='form-control') }}
    {{ render_field_with_label(form.path, label="Filesystem path", class='form-control') }}
    {{ render_field_with_label(form.description, class='form-control', value=form.description.data) }}
     <button type="submit" class="btn btn-default">Submit</button>
</form>
{% include 'footer.html.j2' %}